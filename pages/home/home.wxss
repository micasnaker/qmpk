/* pages/home/home.wxss */

page {
  background-color: rgba(172, 170, 170, 0.212);
}

/* 轮播图部分 */

swiper {
  height: 180rpx;
  width: 100%;
  text-align: center;
}

swiper-item image {
  width: 90%;
  height: 96%;
  border-radius: 100rpx;
  margin: 2% 2%;
}

.home_position {
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
  width: 92%;
  margin: auto;
}

.home_position i-icon {
  line-height: 90rpx;
}

.p_address {
  display: flex;
  justify-content: space-evenly;
  line-height: 90rpx;
}

.p_address view:first-child {
  padding-right: 20rpx;
  color: rgb(168, 164, 164);
  font-size: 30rpx;
}

.p_address view:last-child {
  font-weight: 500;
  font-size: 30rpx;
  color: #000;
}

.p_left {
  display: flex;
  justify-content: space-evenly;
}

.p_right {
  margin-top: 20rpx;
}

button::after {
  border: none;
}

.p_btn {
  border-radius: 60rpx;
  border: 1px solid lightsalmon;
  color: lightsalmon;
  height: 60rpx;
  font-size: 24rpx;
}

/* 文字轮播 */

.swiper_container {
  background-color: #000;
  height: 50rpx;
  width: 90%;
  margin: auto;
  line-height: 50rpx;
  opacity: 0.5;
  color: #fff;
  border-radius: 20rpx;
}

.swiper_item {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 本地课程横向滚动 */

.button {
  margin: 20rpx;
}

.local_course {
  width: 90%;
  margin: auto;
  padding-top: 50rpx;
}

.course_text {
  font-weight: 530;
}

.scroll-x {
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
}

.course_wrap {
  /* align-items: center; */
  width: 310rpx;
  height: 400rpx;
  border-radius: 30rpx;
  background-color: #fff;
  margin-right: 20rpx;
}

.course_wrap image {
  width: 100%;
  height: 250rpx;
  border-radius: 30rpx;
  margin: auto;
}

.ellipsi {
  width: 260rpx;
  font-size: 31rpx;
  padding-top: 10rpx;
  margin: auto;
  overflow: hidden; /*超出部分隐藏*/
  text-overflow: ellipsis; /* 超出部分显示省略号 */
  white-space: nowrap; /*规定段落中的文本不进行换行 */
}

.course_money {
  font-size: 31rpx;
  width: 260rpx;
  color: red;
  margin: auto;
  padding-top: 20rpx;
}

/* 全国热门 */

.nav_hot {
  width: 100%;
  border-radius: 30rpx;
  margin-top: 30rpx;
  padding-bottom: 25%;
}

.hot_wrap {
  width: 100%;
  border-radius: 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.hot_wrap:first-child {
  margin-top: 0rpx;
}

.hot_top {
  display: flex;
}

.hot_bg {
  border-radius: 20rpx;
  width: 41%;
  height: 180rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
}

.hot_bg image {
  border-radius: 20rpx;
  width: 100%;
  height: 100%;
}

.hot_content {
  width: 46%;
  padding-left: 20rpx;
  padding-top: 12rpx;
}

.content_nav {
  font-size: 30rpx;
  font-weight: bold;
}

.content_price {
  padding-top: 31rpx;
}

.content_price text:first-child {
  color: red;
  font-size: 27rpx;
}

.content_price text:last-child {
  color: #ccc;
  text-decoration: line-through;
  padding-left: 5rpx;
  font-size: 22rpx;
}

.hot_foot {
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
  width: 90%;
  margin: auto;
}

#pt_btn {
  width: 130rpx;
  height: 60rpx;
  font-size: 25rpx;
  margin-top: 15rpx;
  border-radius: 60rpx;
  color: #fff;
  font-weight: bold;
  background-color: lightsalmon;
}

.hot_foot text {
  font-size: 27rpx;
  color: rgb(102, 101, 101);
}
