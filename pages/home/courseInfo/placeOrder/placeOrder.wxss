/* pages/home/courseInfo/placeOrder/placeOrder.wxss */

.baoming {
  width: 100%;
  height: 100%;
}

.baoming_head {
  font-size: 30rpx;
  color: #000;
  padding-left: 5%;
}

.bm_content {
  display: flex;
  width: 90%;
  margin: auto;
  padding: 50rpx;
}

.bm_image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.bm_image image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.bg_nav {
  padding-left: 20rpx;
  height: 150rpx;
}

.shop_detail {
  width: 500rpx;
  height: 110rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(17, 17, 17, 1);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.price_wrap {
  display: flex;
  justify-content: space-between;
  height: 50rpx;
  line-height: 50rpx;
}

.price_wrap text {
  font-size: 35rpx;
}

.price_wrap text:first-child {
  text-decoration: line-through;
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(17, 17, 17, 1);
  background: linear-gradient(0deg, rgba(240, 92, 92, 1) 0%, rgba(253, 104, 61, 1) 89.892578125%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.price_wrap text:last-child {
  padding-left: 30rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: bold;
  text-decoration: line-through;
  color: rgba(169, 169, 169, 1);
}

.student_age {
  margin: auto !important;
  width: 85%;
}