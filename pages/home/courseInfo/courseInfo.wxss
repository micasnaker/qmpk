/* pages/home/goodsInfo/goodsInfo.wxss */

.goodsInfo {
  height: 100%;
}

/* 商品介绍 */

.content {
  width: 96%;
  margin: 0 auto;
  font-size: 15px;
  font-family: Microsoft Yahei;
}

.content_price {
  display: flex;
  justify-content: space-between;
}

.price_wrap text {
  color: #ed1709;
}

.price_wrap text:last-child {
  color: #666466;
  text-decoration: line-through;
  padding-left: 10rpx;
}

.tab_wrap {
  height: 500rpx;
}

.wrap {
  width: 96%;
  margin: 0 auto;
}

/* 底部固定foot */

.foot {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  z-index: 999;
  background-color: #ffff;
}

.iconfont {
  font-size: 45rpx;
}

.foot_wrap {
  display: flex;
  justify-content: space-between;
}

.icon {
  line-height: 100rpx;
  margin-left: 20rpx;
  display: flex;
}

.icon text {
  padding-left: 20rpx;
}

.btn_shopCart {
  width: 280rpx;
  height: 200rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 32rpx;
  background-color: #888;
  float: right;
  text-align: center;
  font-family: Microsoft Yahei;
}

.btn_buy {
  width: 330rpx;
  /* height: 200rpx; */
  line-height: 100rpx;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  background: linear-gradient(90deg, rgba(240, 92, 92, 1), rgba(253, 104, 61, 1));
}

.icon-shouye {
  color: lightsalmon;
}

.icon-gouwuchekong {
  color: lightsalmon;
}

.shuxian2 {
  color: rgb(167, 165, 165);
}

/* 修改 */

/* 轮播图部分 */

swiper {
  height: 400rpx;
  width: 100%;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.swiper_foot {
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: space-evenly;
  height: 100rpx;
  background: linear-gradient(90deg, rgba(240, 92, 92, 1), rgba(253, 104, 61, 1));
  line-height: 100rpx;
  width: 100%;
}

.swiper_price {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  line-height: 100rpx;
}

.jtpt {
  display: flex;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 100rpx;
}

.jzsj {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.jzsj text {
  background-color: #fff;
  color: lightsalmon;
  margin-right: 10rpx;
  padding: 9rpx;
  border-radius: 4rpx;
}

.shuxian {
  color: #fff;
}

.cour_content {
  height: 130rpx;
  width: 90%;
  margin: auto;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
}

.cour_text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(17, 17, 17, 1);
}

.cc_wrap {
  display: flex;
  padding-top: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.cc_wrap text:first-child {
  color: #ccc;
  font-size: 28rpx;
}

.cc_wrap text {
  color: lightsalmon;
  padding-right: 10rpx;
}

.cc_wrap text:last-child {
  color: #ccc;
  font-size: 28rpx;
  text-decoration: line-through;
}

.btn_fx {
  padding-top: 30rpx;
}

.btn_fx text {
  padding-right: 8rpx;
  color: #ccc;
}

/* 课程介绍 */

.ccjs_content {
  width: 90%;
  margin: auto;
  padding-top: 50rpx;
}

.ccjs_content:nth-child(2n){
  margin-bottom: 25%;
}

.ccjs_head text:first-child {
  color: lightsalmon;
  margin-right: 10rpx;
}

.ccjs_head text {
  font-size: 30rpx;
}

.content_nav {
  width: 100%;
  font-size: 26rpx;
  line-height: 45rpx;
  color: rgb(182, 180, 180);
}

.content_nav text {
  width: 300rpx;
  height: 100%;
  text-align: left;
}

.shouye {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(17, 17, 17, 1);
}

.kefu {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(17, 17, 17, 1);
}
