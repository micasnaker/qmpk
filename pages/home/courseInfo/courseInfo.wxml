<view class='goodsInfo'>
  <!-- 轮播图 -->
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="item in 3" wx:key="index" data-id="{{item.id}}" data-index="{{index}}">
      <swiper-item>
        <image src="https://upload-images.jianshu.io/upload_images/3301720-db890fabf626e0ac.jpg?imageMogr2/auto-orient/strip|imageView2/1/w/360/h/240" class="slide-image" />
      </swiper-item>
    </block>
    <view class="swiper_foot">
      <text class="swiper_price">￥10.00</text>
      <view class="jtpt">
        <i-icon size="22" type="dynamic_fill" />阶梯拼团
      </view>
      <view class="shuxian">
        |
      </view>
      <view class="jzsj">
        截止时间
        <text>2019</text>年
        <text>12</text>月
        <text>31</text>日
      </view>
    </view>
  </swiper>

  <!-- 课程抬头 -->
  <view class="cour_content">
    <view>
      <text class="cour_text">云艺书法绘画培训团购活动</text>
